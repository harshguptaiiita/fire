<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harshgupta.fire.MainActivity">


    <Button
        android:id="@+id/insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="126dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="131dp"
        android:text="Insert"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/update"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/insert"
        android:layout_alignRight="@+id/insert"
        android:layout_below="@+id/insert"
        android:layout_marginTop="41dp"
        android:text="Update" />

    <Button
        android:id="@+id/delete"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/update"
        android:layout_alignStart="@+id/update"
        android:layout_below="@+id/update"
        android:layout_marginTop="44dp"
        android:text="Delete" />

    <Button
        android:id="@+id/show"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/delete"
        android:layout_alignRight="@+id/delete"
        android:layout_below="@+id/delete"
        android:layout_marginTop="46dp"
        android:text="Show" />
</RelativeLayout>
